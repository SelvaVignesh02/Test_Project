# Stage 1: Build
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY server.js ./ 
COPY src ./src  # include src folder if exists

# Stage 2: Production
FROM node:18-alpine AS production
WORKDIR /app
COPY package*.json ./
RUN npm install --only=production
COPY --from=builder /app/server.js ./ 
COPY --from=builder /app/src ./src
EXPOSE 5000
ENV NODE_ENV=production
CMD ["node", "server.js"]
