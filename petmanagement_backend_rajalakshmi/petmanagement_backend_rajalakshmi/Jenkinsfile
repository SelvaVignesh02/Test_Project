pipeline {
    agent any

    environment {
        BACKEND_DIR = 'petmanagement_backend_rajalakshmi/petmanagement_backend_rajalakshmi'
        IMAGE_NAME = 'petmanagement_backend:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout from GitHub
                git branch: 'main', url: 'https://github.com/SelvaVignesh02/Test_Project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir("${BACKEND_DIR}") {
                    // Run tests. If no tests exist, this can be skipped or you can add test scripts later
                    sh 'npm test || echo "No tests specified, skipping."'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }
    }

    post {
        success {
            echo "✅ Backend build and Docker image creation successful."
        }
        failure {
            echo "❌ Pipeline failed. Check logs for details."
        }
    }
}

